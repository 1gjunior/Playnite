<UserControl x:Class="PlayniteUI.ProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlayniteUI"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid Background="{StaticResource ControlBackgroundBrush}">
        <DockPanel>
            <TextBlock Name="TextDescription" DockPanel.Dock="Left" Text="Test" Margin="5,0,5,0" VerticalAlignment="Center"/>
            <ProgressBar Name="ProgressBarBar" DockPanel.Dock="Left"/>
        </DockPanel>
    </Grid>
</UserControl>
