<UserControl x:Class="PlayniteUI.ProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlayniteUI"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="300">
    <Grid>
        <ProgressBar Name="ProgressBarBar" />
        <TextBlock Name="TextProgressDescription" Margin="10,0,0,0" Foreground="{StaticResource TextBrush}"
                   VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
</UserControl>
