<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Playnite.DesktopApp.Controls.Views;assembly=PlayniteUI"
                    xmlns:pmrk="clr-namespace:Playnite.DesktopApp.Markup;assembly=PlayniteUI"
                    xmlns:psdk="clr-namespace:Playnite.SDK;assembly=Playnite.SDK">

    <Style x:Key="NotificationMessage" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Style="{StaticResource HighlightBorder}">
                        <TextBlock Text="{Binding Text}"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   Margin="4" TextWrapping="Wrap"
                                   MinHeight="48"/>
                    </Border>                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:NotificationPanel}">
        <Setter Property="Background" Value="{DynamicResource PopupBackgroundBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:NotificationPanel">
                    <DockPanel Background="{TemplateBinding Background}">
                        <DockPanel Margin="10,8,5,12" DockPanel.Dock="Top">
                            <TextBlock DockPanel.Dock="Right" Margin="0,0,5,0">
                                <Hyperlink Command="{pmrk:MainViewModel CloseNotificationPanelCommand}">
                                    <Run Text="r" FontFamily="Marlett" />
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock DockPanel.Dock="Left">
                                <Hyperlink Command="{pmrk:Api Notifications.RemoveAllCommands}">
                                    <Run Text="{DynamicResource LOCClearFilters}" />
                                </Hyperlink>
                            </TextBlock>
                        </DockPanel>

                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"
                                       DockPanel.Dock="Top">
                            <ItemsControl ItemsSource="{pmrk:Api Notifications.Messages, Mode=OneWay}" >
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource NotificationMessage}"
                                                Command="{Binding ActivationCommand}"
                                                Margin="2,5,2,5" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>