<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pcmds="clr-namespace:Playnite.Commands;assembly=Playnite"
                    xmlns:pbeh="clr-namespace:Playnite.Behaviors;assembly=Playnite"
                    xmlns:pctrlsShared="clr-namespace:Playnite.Controls;assembly=Playnite"
                    xmlns:views="clr-namespace:Playnite.DesktopApp.Controls.Views;assembly=PlayniteUI"
                    xmlns:pctrls="clr-namespace:Playnite.DesktopApp.Controls;assembly=PlayniteUI"
                    xmlns:pmrk="clr-namespace:Playnite.DesktopApp.Markup;assembly=PlayniteUI"
                    xmlns:playnite="clr-namespace:Playnite;assembly=Playnite">    

    <Style TargetType="{x:Type views:MainPanel}">
        <Setter Property="Background" Value="{StaticResource GamesListPanelBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:MainPanel}">
                    <Border Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
                        <DockPanel Margin="0,0,110,0">
                            <Border DockPanel.Dock="Left" Background="Transparent" Cursor="Hand" 
                        pbeh:LeftClickContextMenuBehavior.Enabled="True"
                        WindowChrome.IsHitTestVisibleInChrome="True"
                        Margin="5,0,0,0">
                                <Border.ContextMenu>
                                    <pctrls:MainMenu StaysOpen="False" Placement="Bottom" />
                                </Border.ContextMenu>
                                <Image Source="{pmrk:ThemeFile 'Images/applogo.png'}" Height="40" RenderOptions.BitmapScalingMode="Fant" />
                            </Border>

                            <pctrls:SearchBox Width="235" DockPanel.Dock="Left" Margin="5,6,0,6"
                                   WindowChrome.IsHitTestVisibleInChrome="True"
                                   Text="{pmrk:Settings FilterSettings.Name, Delay=100, Mode=TwoWay}" />

                            <Border Background="Transparent" Cursor="Hand" 
                        DockPanel.Dock="Left" Margin="5,6,0,6" Width="35"
                        pbeh:LeftClickContextMenuBehavior.Enabled="True"
                        WindowChrome.IsHitTestVisibleInChrome="True"
                        Style="{DynamicResource HighlightBorder}">
                                <Border.ContextMenu>
                                    <pctrls:ViewSettingsMenu StaysOpen="False" Placement="Bottom" />
                                </Border.ContextMenu>
                                <TextBlock Text="&#xE10C;" FontFamily="Segoe UI Symbol" FontSize="20"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>

                            <CheckBox IsChecked="{pmrk:Settings FilterPanelVisible, Mode=TwoWay}"
                          WindowChrome.IsHitTestVisibleInChrome="True"
                          DockPanel.Dock="Left" Margin="5,6,0,6" Width="35">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <Border Background="Transparent" Style="{DynamicResource HighlightBorder}"
                                                Cursor="Hand">
                                                        <TextBlock Text="&#xE16E;" FontFamily="Segoe UI Symbol" FontSize="20"
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                                                       Foreground="{TemplateBinding Foreground}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{pmrk:Settings FilterSettings.IsActive}" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource GlyphBrush}" />
                                                <Setter Property="ToolTip" Value="{DynamicResource LOCFilterActiveLabel}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{pmrk:Settings FilterSettings.IsActive}" Value="False">
                                                <Setter Property="Foreground" Value="{DynamicResource TextBrushDarker}" />
                                                <Setter Property="ToolTip" Value="{DynamicResource LOCFilterInactiveLabel}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>

                            <CheckBox IsChecked="{pmrk:Settings NotificationPanelVisible, Mode=TwoWay}"
                          WindowChrome.IsHitTestVisibleInChrome="True"
                          DockPanel.Dock="Left" Margin="5,6,0,6">
                                <CheckBox.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <Border Background="Transparent" Cursor="Hand">
                                                        <Grid>
                                                            <TextBlock Text="&#x1f514;" FontFamily="Segoe UI Symbol" FontSize="20"
                                                           Foreground="{DynamicResource GlyphBrush}"
                                                           HorizontalAlignment="Center"/>
                                                            <Border CornerRadius="3" Width="15" Height="15" Margin="25,15,0,0"
                                                        Background="OrangeRed">
                                                                <TextBlock Text="{pmrk:Api Notifications.Count}" FontSize="12"                                                               
                                                               Foreground="{DynamicResource TextBrush}"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{pmrk:Api Notifications.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Setter Property="IsChecked" Value="False"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>

                            <Button Margin="15,6,5,6" DockPanel.Dock="Right"
                        Background="Transparent"
                        Padding="0" BorderThickness="0"
                        WindowChrome.IsHitTestVisibleInChrome="True"
                        Command="{Binding OpenSteamFriendsCommand}"
                        ToolTip="{DynamicResource LOCSteamFriendsTooltip}"
                        Visibility="{pmrk:Settings ShowSteamFriendsButton}">
                                <TextBlock Text="&#xE125;" FontFamily="Segoe UI Symbol" FontSize="22"
                            VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Button>

                            <Button Visibility="{Binding ProgressVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Command="{Binding CancelProgressCommand}"
                        Background="Transparent"
                        Content="{DynamicResource LOCCancelLabel}"
                        WindowChrome.IsHitTestVisibleInChrome="True"
                        DockPanel.Dock="Right" Margin="5,6,0,6" />

                            <Grid Visibility="{Binding ProgressVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                      DockPanel.Dock="Left" Margin="10,6,0,6">
                                <ProgressBar Maximum="{Binding ProgressTotal}"
                                 Value="{Binding ProgressValue}" />
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                               Style="{DynamicResource BaseTextBlockStyle}"
                               Text="{Binding ProgressStatus}" />
                            </Grid>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>