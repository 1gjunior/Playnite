<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pcmds="clr-namespace:Playnite.Commands;assembly=Playnite"
                    xmlns:pbeh="clr-namespace:Playnite.Behaviors;assembly=Playnite"
                    xmlns:pctrlsShared="clr-namespace:Playnite.Controls;assembly=Playnite"
                    xmlns:views="clr-namespace:Playnite.DesktopApp.Controls.Views;assembly=Playnite.DesktopApp"
                    xmlns:pctrls="clr-namespace:Playnite.DesktopApp.Controls;assembly=Playnite.DesktopApp"
                    xmlns:pmrk="clr-namespace:Playnite.DesktopApp.Markup;assembly=Playnite.DesktopApp"
                    xmlns:playnite="clr-namespace:Playnite;assembly=Playnite">    

    <Style TargetType="{x:Type views:MainPanel}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:MainPanel}">
                    <Border Height="50" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource NormalBrush}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{DynamicResource GamesListPanelBrush}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{pmrk:Settings ShowBackgroundImage}" Value="False">
                                        <Setter Property="Background" Value="Transparent" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <DockPanel Margin="0,3,110,3">
                            <Border Background="Transparent" Cursor="Hand" DockPanel.Dock="Left"
                                pbeh:LeftClickContextMenuBehavior.Enabled="True"
                                WindowChrome.IsHitTestVisibleInChrome="True"
                                Margin="5,0,0,0">
                                <Border.ContextMenu>
                                    <pctrls:MainMenu StaysOpen="False" Placement="Bottom" />
                                </Border.ContextMenu>
                                <Image Source="{pmrk:ThemeFile 'Images/applogo.png'}" Height="40" RenderOptions.BitmapScalingMode="Fant"
                                    Margin="10,0,5,0"/>
                            </Border>

                            <pctrls:SearchBox Margin="5,6,0,6"  DockPanel.Dock="Left"
                                                WindowChrome.IsHitTestVisibleInChrome="True"
                                                Width="300"
                                                Text="{pmrk:Settings FilterSettings.Name, Delay=100, Mode=TwoWay}" />                      

                            <Border Cursor="Hand" 
                                    DockPanel.Dock="Left" Margin="10,6,0,6" Width="35"
                                    pbeh:LeftClickContextMenuBehavior.Enabled="True"
                                    WindowChrome.IsHitTestVisibleInChrome="True"
                                    Style="{DynamicResource HighlightBorder}">
                                <Border.ContextMenu>
                                    <pctrls:ViewSettingsMenu StaysOpen="False" Placement="Bottom" />
                                </Border.ContextMenu>
                                <TextBlock Text="&#xE10C;" FontFamily="Segoe UI Symbol" FontSize="20"
                                           Foreground="{StaticResource TextBrush}"
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>

                            <CheckBox IsChecked="{pmrk:Settings FilterPanelVisible, Mode=TwoWay}"
                                      WindowChrome.IsHitTestVisibleInChrome="True"
                                      DockPanel.Dock="Left" Margin="10,6,0,6" Width="35">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <Border Style="{DynamicResource HighlightBorder}" Cursor="Hand">
                                                        <TextBlock Text="&#xE16E;" FontFamily="Segoe UI Symbol" FontSize="20"
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                                                       Foreground="{TemplateBinding Foreground}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{pmrk:Settings FilterSettings.IsActive}" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource GlyphBrush}" />
                                                <Setter Property="ToolTip" Value="{DynamicResource LOCFilterActiveLabel}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{pmrk:Settings FilterSettings.IsActive}" Value="False">
                                                <Setter Property="Foreground" Value="{DynamicResource TextBrushDarker}" />
                                                <Setter Property="ToolTip" Value="{DynamicResource LOCFilterInactiveLabel}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>

                            <CheckBox IsChecked="{pmrk:Settings NotificationPanelVisible, Mode=TwoWay}"
                                      WindowChrome.IsHitTestVisibleInChrome="True"
                                      DockPanel.Dock="Left" Margin="10,6,0,6">
                                <CheckBox.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Foreground" Value="{DynamicResource GlyphBrush}" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <Border Cursor="Hand" Background="Transparent">
                                                        <Grid>
                                                            <TextBlock Text="&#x1f514;" FontFamily="Segoe UI Symbol" FontSize="20"
                                                                       Foreground="{TemplateBinding Foreground}"
                                                                       HorizontalAlignment="Center"/>
                                                            <Border CornerRadius="3" Width="15" Height="15" Margin="25,15,0,0"
                                                                    Background="OrangeRed">
                                                                <TextBlock Text="{pmrk:Api Notifications.Count}" FontSize="12"                                                               
                                                                       Foreground="{DynamicResource TextBrush}"
                                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{pmrk:Api Notifications.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Setter Property="IsChecked" Value="False"/>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>

                            <Button Margin="15,6,5,6" DockPanel.Dock="Right"
                                    Background="Transparent"
                                    Padding="0" BorderThickness="0"
                                    WindowChrome.IsHitTestVisibleInChrome="True"
                                    Command="{Binding OpenSteamFriendsCommand}"
                                    ToolTip="{DynamicResource LOCSteamFriendsTooltip}"
                                    Visibility="{pmrk:Settings ShowSteamFriendsButton}">
                                <TextBlock Text="&#xE125;" FontFamily="Segoe UI Symbol" FontSize="22"
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Button>

                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="10,5,0,5">
                                <Grid Visibility="{Binding ProgressVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                      MaxWidth="600" MinWidth="300">
                                    <ProgressBar Maximum="{Binding ProgressTotal}" Value="{Binding ProgressValue}" />
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Style="{DynamicResource BaseTextBlockStyle}" Margin="5,0,5,0"
                                           Text="{Binding ProgressStatus}" TextTrimming="CharacterEllipsis" />
                                </Grid>
                                
                                <Button Visibility="{Binding ProgressVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Command="{Binding CancelProgressCommand}"
                                        Content="{DynamicResource LOCCancelLabel}"
                                        WindowChrome.IsHitTestVisibleInChrome="True"
                                        Margin="5,0,0,0" />
                            </StackPanel>
                    
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>