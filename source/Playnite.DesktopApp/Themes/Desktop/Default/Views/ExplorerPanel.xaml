<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:Playnite.DesktopApp.Controls.Views;assembly=PlayniteUI"
                    xmlns:pctrls="clr-namespace:Playnite.DesktopApp.Controls;assembly=PlayniteUI"
                    xmlns:pmrk="clr-namespace:Playnite.DesktopApp.Markup;assembly=PlayniteUI">    

    <Style TargetType="{x:Type views:ExplorerPanel}">
        <Setter Property="Background" Value="{DynamicResource GamesListPanelBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:ExplorerPanel}">
                    <DockPanel Background="{TemplateBinding Background}">                        
                        <ComboBox DockPanel.Dock="Top" Margin="5"
                                  SelectedValue="{Binding DatabaseExplorer.SelectedField}"
                                  ItemsSource="{Binding DatabaseExplorer.Fields}"/>
                        <ListBox DockPanel.Dock="Top" Margin="5"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ItemsSource="{Binding DatabaseExplorer.FieldValues}"/>
                    </DockPanel>                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>