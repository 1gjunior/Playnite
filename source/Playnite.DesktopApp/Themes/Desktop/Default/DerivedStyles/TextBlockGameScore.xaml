<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:sdkModel="clr-namespace:Playnite.SDK.Models;assembly=Playnite.SDK"
                    mc:Ignorable="d">
    
    <Style x:Key="TextBlockGameScore" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
        <Style.Triggers>
            <Trigger Property="Tag" Value="{x:Static sdkModel:ScoreRating.Positive}">
                <Setter Property="Foreground" Value="{DynamicResource PositiveRatingBrush}" />
            </Trigger>
            <Trigger Property="Tag" Value="{x:Static sdkModel:ScoreRating.Negative}">
                <Setter Property="Foreground" Value="{DynamicResource NegativeRatingBrush}" />
            </Trigger>
            <Trigger Property="Tag" Value="{x:Static sdkModel:ScoreRating.Mixed}">
                <Setter Property="Foreground" Value="{DynamicResource MixedRatingBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>